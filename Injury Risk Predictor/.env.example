# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================================
# Application Settings
# ============================================================
APP_ENV=development
DEBUG=False

# ============================================================
# Data Sources (if using external APIs or databases)
# ============================================================
# DATA_API_KEY=your-api-key-here
# DATA_API_URL=https://api.example.com/v1

# ============================================================
# Database Configuration (if applicable)
# ============================================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=injury_predictor
# DB_USER=your-username
# DB_PASSWORD=your-password

# ============================================================
# Cloud Storage (if storing models/data remotely)
# ============================================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# ============================================================
# Model Paths (optional - defaults to local)
# ============================================================
# MODEL_PATH=./models
# DATA_PATH=./data

# ============================================================
# Streamlit Configuration
# ============================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# ============================================================
# Feature Flags
# ============================================================
# ENABLE_EXPERIMENTAL_FEATURES=false
# ENABLE_CACHING=true

# ============================================================
# Logging
# ============================================================
LOG_LEVEL=INFO
# LOG_FILE=./logs/app.log

# ============================================================
# Performance
# ============================================================
# MAX_WORKERS=4
# CACHE_TTL=3600
